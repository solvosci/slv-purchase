<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_fcd_purchase_order_wizard" model="ir.ui.view">
        <field name="name">fcd.purchase.order.wizard</field>
        <field name="model">fcd.purchase.order.wizard</field>
        <field name="arch" type="xml"> 
            <form string="QR Code Reading">
                <header style="justify-content: flex-start">
                    <button name="save_and_new_purchase_order_line" class="btn-primary" type="object" string="New"/>
                    <button name="save_and_next_purchase_order_line" class="btn-primary" type="object" string="Next"/>
                    <field name="qr_code" classs="mr-2" widget="qr_code_widget" options="{'show_text': False}" nolabel="1"/>
                </header>
                <sheet class="mt-0 mb-0 pt-0 pb0">
                  <notebook class="mt-0 mb-0 pt-0 pb0">
                    <page string="QR Data">
                        <group class="mt-0 mb-0 pt-0 pb0">
                            <group class="mt-0 mb-0 pt-0 pb0">
                                <field name="qr_code2" class="fcd_text_area"/>
                                <field name="partner_id" required="1"/>
                                <field name="tag_number" required="1"/>
                            </group>
                            <group class="mt-0 mb-0 pt-0 pb0">
                                <field name="product_id_domain" invisible="1"/>
                                <field name="product_id" required="1" domain="product_id_domain"/>
                                <label for="price" style="font-size: 200%;"/>
                                <field name="price" style="font-size: 200%;" nolabel="1" required="1"/>
                            </group>
                        </group>
                    </page>
                    <page string="Manual Data">
                      <group>
                          <group>
                              <field name="partner_id" required="1"/>
                              <field name="tag_number" required="1"/>
                              <field name="net_weight"/>
                              <field name="total_weight" />
                          </group>
                          <group>
                              <field name="product_id_domain" invisible="1"/>
                              <field name="product_id" required="1" domain="product_id_domain"/>
                              <field name="price" required="1"/>
                              <field name="lot" required="1"/>
                          </group>
                      </group>
                      <separator colspan="4"/>
                      <group>
                          <group>
                                <field name="ship" invisible="1"/>
                                <field name="ship_id"/>
                                <field name="ship_license_plate" invisible="1"/>
                                <field name="ship_license_plate_rel"/>
                                <field name="production_method" invisible="1"/>
                                <field name="production_method_id"/>
                          </group>
                          <group>
                                <field name="fishing_gear" invisible="1"/>
                                <field name="fishing_gear_id"/>
                                <field name="presentation" invisible="1"/>
                                <field name="presentation_id"/>
                                <field name="fao_zone" invisible="1"/>
                                <field name="subzone_id"/>
                          </group>
                      </group>
                    <group>
                        <group>
                            <field name="scientific_name" invisible="1"/>
                            <field name="sanity_reg" invisible="1"/>

                            <field name="specific_lot"/>
                            <field name="packing" invisible="1"/>
                        </group>
                        <group>
                            <field name="tide_start_date"/>
                            <field name="tide_end_date"/>
                            <field name="packaging_date" invisible="1"/>
                            <field name="expiration_date" invisible="1"/>
                        </group>
                    </group>
                    </page>
                  </notebook>
                </sheet>
                <footer></footer>
            </form>
        </field>
    </record>

    <record id="view_fcd_purchase_order_reduced_wizard" model="ir.ui.view">
        <field name="name">fcd.purchase.order.wizard</field>
        <field name="model">fcd.purchase.order.wizard</field>
        <field name="arch" type="xml"> 
            <form string="Add line">
                <sheet>
                    <group>
                        <group>
                            <field name="product_id" required="1" />
                            <field name="editable_lot" required="1" />
                        </group>
                        <group>
                            <field name="quantity" required="1" />
                            <field name="price" required="1" />
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button 
                        name="save_and_close_purchase_order_line"
                        class="btn-primary"
                        type="object" 
                        string="Save and Close" />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

</odoo>
