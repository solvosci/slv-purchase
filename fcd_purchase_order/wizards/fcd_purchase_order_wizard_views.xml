<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_fcd_purchase_order_wizard" model="ir.ui.view">
        <field name="name">fcd.purchase.order.wizard</field>
        <field name="model">fcd.purchase.order.wizard</field>
        <field name="arch" type="xml"> 
            <form string="QR Code Reading">
                <header style="justify-content: flex-start">
                    <field name="qr_code" widget="qr_code_widget" options="{'show_text': False}" nolabel="1" />
                </header>
                <sheet>
                    <h2 class="text-center"><field name="qr_type" readonly="1" nolabel="1" /></h2>
                    <group>
                        <group>
                            <field name="partner_id" required="1" />
                            <field name="tag_number" required="1" />
                        </group>
                        <group>
                            <field name="product_id_domain" invisible="1"/>
                            <field name="product_id" required="1" domain="product_id_domain" />
                            <field name="price" required="1" />
                        </group>
                    </group>
                    <separator colspan="4" />
                    <group>
                        <group>
                            <field name="ship_id" />
                            <field name="production_method_id" />
                            <field name="fishing_gear_id" domain="[('ship_ids', 'in', ship_id)]" />
                        </group>
                        <group>
                            <field name="country_id" />
                            <field name="presentation_id" />
                        </group>
                    </group>
                    <notebook>
                        <page string="QR Data">
                            <group>
                                <group>
                                    <field name="lot" required="1" readonly="1" />
                                    <field name="scientific_name" readonly="1" />
                                    <field name="sanity_reg" readonly="1" />
                                    <field name="ship_name" readonly="1" />
                                    <field name="fao_zone" readonly="1" />
                                    <field name="fao" readonly="1" />
                                    <field name="specific_lot" readonly="1" />
                                </group>
                                <group>
                                    <field name="tide_start_date" readonly="1" />
                                    <field name="tide_end_date" readonly="1" />
                                    <field name="packaging_date" readonly="1" />
                                    <field name="expiration_date" readonly="1" />
                                    <field name="net_weight" readonly="1" />
                                    <field name="packing" readonly="1" />
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button 
                        name="save_and_new_purchase_order_line"
                        class="btn-primary"
                        type="object" 
                        string="Save and New" />
                    <button 
                        name="save_and_next_purchase_order_line"
                        class="btn-primary"
                        type="object" 
                        string="Save and Next" />
                    <button 
                        name="save_and_close_purchase_order_line"
                        class="btn-primary"
                        type="object" 
                        string="Save and Close" />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="view_fcd_purchase_order_reduced_wizard" model="ir.ui.view">
        <field name="name">fcd.purchase.order.wizard</field>
        <field name="model">fcd.purchase.order.wizard</field>
        <field name="arch" type="xml"> 
            <form string="Add line">
                <sheet>
                    <group>
                        <group>
                            <field name="product_id" required="1" />
                            <field name="editable_lot" required="1" />
                        </group>
                        <group>
                            <field name="quantity" required="1" />
                            <field name="price" required="1" />
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button 
                        name="save_and_close_purchase_order_line"
                        class="btn-primary"
                        type="object" 
                        string="Save and Close" />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

</odoo>
