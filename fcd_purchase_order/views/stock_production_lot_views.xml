<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="stock_production_lot_view_inherit_form" model="ir.ui.view"> 
        <field name="name">stock.production.lot.form (FCD Purchase Order)</field>
        <field name="model">stock.production.lot</field>
        <field name="inherit_id" ref="fcd.stock_production_lot_view_inherit_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='fcd_document_line_name']" position="after">
                <field name="fcd_document_line_product_qty" />
                <field name="fcd_document_line_price_unit" />
                <field name="currency_id" invisible="1"/>
                <field name="fcd_document_line_subtotal" />
            </xpath>  
        </field>
    </record>

</odoo>
