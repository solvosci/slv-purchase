<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="action_report_purchase_order_rfq_based" model="ir.actions.report">
            <field name="name">Purchase Order (as RFQ)</field>
            <field name="model">purchase.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">purchase_order_report_rfq_based.report_purchaseorder_as_rfq</field>
            <field name="report_file">purchase_order_report_rfq_based.report_purchaseorder_as_rfq</field>
            <field name="print_report_name">
                (object.state in ('draft', 'sent') and 'Request for Quotation - %s' % (object.name) or
                'Purchase Order - %s' % (object.name))</field>
            <field name="binding_model_id" ref="purchase.model_purchase_order"/>
            <field name="binding_type">report</field>
        </record>
    </data>
</odoo>
