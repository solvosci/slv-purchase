<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_picking_type_form" model="ir.ui.view">
            <field name="name">stock.picking.type.form (in Purchase Order Type Advanced)</field>
            <field name="model">stock.picking.type</field>
            <field name="inherit_id" ref="stock.view_picking_type_form"/>
            <field
                name="groups_id"
                eval="[(4, ref('purchase.group_purchase_user'))]"
            />
            <field name="arch" type="xml">
                <field name="warehouse_id" position="after">
                    <field
                        name="buy_purchase_order_type_id" 
                        domain="[('picking_type_id', 'in', [False, id])]"
                        attrs="{'invisible': [('code', '!=', 'incoming')]}"
                    />
                </field>
            </field>
        </record>
    </data>
</odoo>
