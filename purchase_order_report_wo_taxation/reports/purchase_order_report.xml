<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_purchaseorder_without_taxation" inherit_id="purchase.report_purchaseorder_document">
        <xpath expr="//th[@name='th_taxes']" position="attributes">
            <attribute name="class">d-none</attribute>
        </xpath>
        <xpath expr="//td[@name='td_taxes']" position="attributes">
            <attribute name="class">d-none</attribute>
        </xpath>
        <xpath expr="//td[@name='td_taxes_label']/parent::tr" position="attributes">
            <attribute name="class">d-none</attribute>
        </xpath>
        <xpath expr="//td[@name='td_amount_total_label']/parent::tr" position="attributes">
            <attribute name="class">d-none</attribute>
        </xpath>
    </template>

</odoo>
